@model IEnumerable<ToDoListApp.Models.ToDoTask>

<div class="task-list-container mt-4">
    <h3>Task List</h3>
    @if (Model.Any())
    {
        <ul class="list-group">
            @foreach (var task in Model)
            {
                <li class="list-group-item d-flex justify-content-between align-items-center @(task.IsCompleted ? "list-group-item-success" : "")">
                    <div class="d-flex align-items-center">
                        <form asp-controller="Task" asp-action="CompleteTask" method="post" class="me-2">
                            <input type="hidden" name="id" value="@task.Id" />
                            <input type="checkbox" class="form-check-input" onchange="this.form.submit()" @(task.IsCompleted ? "checked" : "") />
                        </form>
                        <span class="task-title">@task.Title</span>
                        @if (task.IsCompleted)
                        {
                            <span class="badge ms-2">Completed</span>
                        }
                    </div>
                    <div class="task-actions">
                        
                        <form asp-controller="Task" asp-action="DeleteTask" method="post" onsubmit="return confirm('Are you sure you want to delete this task?');" class="d-inline">
                            <input type="hidden" name="id" value="@task.Id" />
                            <button type="submit" class="btn btn-danger btn-sm rounded-circle">
                                <i class="fas fa-trash-alt"></i>
                            </button>
                        </form>
                    </div>
                </li>
            }
        </ul>
    }
    else
    {
        <p class="text-muted">No tasks added yet.</p>
    }
</div>
