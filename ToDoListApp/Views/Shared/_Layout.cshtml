<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ToDoList</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        body {
            background-color: #f8f9fa;
            color: #333;
            font-family: Arial, sans-serif;
        }
        .burgundy-bg {
            background-color: #800020 !important; /* Burgundy */
            color: white;
        }
        .burgundy-btn {
            background-color: #800020;
            color: white;
            border: none;
        }
        .burgundy-btn:hover {
            background-color: #5a0015; /* Burgundy - darker on hover */
            color: white;
        }
        .center-container {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }
        .card-custom {
            max-width: 600px;
            width: 100%;
        }
    </style>
</head>
<body>
    <header class="p-3 burgundy-bg">
        <h2 class="text-center mb-0">My To-Do List</h2>
    </header>
    <div class="container">
        @RenderBody()
    </div>
    <footer class="text-center mt-5 mb-4">
        <p>&copy; @DateTime.Now.Year - ToDoListApp</p>
    </footer>
</body>
</html>
